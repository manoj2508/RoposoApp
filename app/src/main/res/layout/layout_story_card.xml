<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/info_card_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/small"
    android:background="@android:color/white"
    card_view:cardCornerRadius="@dimen/dimen_2dp"
    card_view:cardElevation="@dimen/dimen_2dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small"
            android:layout_marginLeft="@dimen/normal"
            android:layout_marginRight="@dimen/normal"
            android:layout_marginTop="@dimen/small"
            android:gravity="center_vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="@dimen/profile_icon_size"
                android:layout_height="@dimen/profile_icon_size"
                android:src="@android:color/holo_red_dark" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/normal"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User name"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/font_normal" />


                <TextView
                    android:id="@+id/user_handle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17 october"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/font_medium" />
            </LinearLayout>

            <CheckedTextView
                android:id="@+id/follow_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/follow_btn_selector"
                android:paddingBottom="@dimen/small"
                android:paddingLeft="@dimen/normal"
                android:paddingRight="@dimen/normal"
                android:paddingTop="@dimen/small"
                android:text="follow"
                android:textColor="@drawable/follow_text_color_selector" />
        </LinearLayout>

        <TextView
            android:id="@+id/event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal"
            android:text="Event Title"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_normal"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/story_image_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/story_image_height"
            android:layout_marginTop="@dimen/very_small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small"
            android:layout_marginLeft="@dimen/normal"
            android:layout_marginRight="@dimen/normal"
            android:layout_marginTop="@dimen/small"
            android:gravity="center_vertical">

            <CheckBox
                android:id="@+id/like_btn"
                android:layout_width="@dimen/extra_large"
                android:layout_height="@dimen/extra_large"
                android:background="@drawable/checkbox_selector"
                android:button="@null" />

            <TextView
                android:id="@+id/likes_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small"
                android:layout_weight="1"
                android:text="13 likes"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font_medium" />

            <TextView
                android:id="@+id/comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="14 comments"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font_medium" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>